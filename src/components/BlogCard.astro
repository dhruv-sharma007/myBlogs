---
const { title, date, description, image, url } = Astro.props;
---

<div
	class="max-w-sm bg-gray-900 mt-6 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
	<a href={url}>
        <img
		src={image.url}
		alt={image.alt}
		class="w-full h-48 object-cover transition-transform duration-300 ease-in-out hover:scale-110"
	/>
    </a>
	<div class="p-5 space-y-2">
		<h2 class="text-xl font-semibold text-gray-800 dark:text-white">{title}</h2>
		<p class="text-sm text-gray-500 dark:text-gray-400">
			{new Date(date).toLocaleDateString()}
		</p>
		<p class="text-gray-700 dark:text-gray-300">{description}</p>
		<div class="pt-3">
			<a
				href={url}
				class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
				Read More
			</a>
		</div>
	</div>
</div>
